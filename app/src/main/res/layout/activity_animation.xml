<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_animation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.orangecoastcollege.cs273.kfrederick5.northernlightsanimation.AnimationActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/lightsImageView"
        android:background="@drawable/lights1"
        android:adjustViewBounds="true"
        android:layout_weight="2"
        android:scaleType="fitCenter"/>

    <Button
        android:text="@string/frame_anim_button_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frameAnimButton"
        android:onClick="frameButton"/>

    <Button
        android:text="@string/rotate_anim_button_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rotateAnimButton"
        android:onClick="rotateButton"/>

    <Button
        android:text="@string/shake_anim_button_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/shakeAnimButton"
        android:onClick="shakeButton"/>

    <Button
        android:text="@string/pulse_anim_button_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pulseAnimButton"
        android:onClick="pulseButton"/>
</LinearLayout>
